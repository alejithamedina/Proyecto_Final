<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_oscuro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a AsisTrack"
            android:textColor="@color/blanco"
            android:textSize="26sp"
            android:textStyle="bold"
            android:paddingBottom="20dp" />

        <!-- BOTÓN ESTUDIANTES -->
        <Button
            android:id="@+id/btnEstudiantes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Estudiantes"
            android:textSize="18sp"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/azul_oscuro"
            android:drawableStart="@drawable/ic_estudiante"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN DOCENTES -->
        <Button
            android:id="@+id/btnDocentes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Docentes"
            android:textSize="18sp"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/azul_oscuro"
            android:drawableStart="@drawable/ic_docente"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN ASIGNATURAS -->
        <Button
            android:id="@+id/btnAsignaturas"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Asignaturas"
            android:textSize="18sp"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/azul_oscuro"
            android:drawableStart="@drawable/ic_asignatura"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN ASISTENCIA -->
        <Button
            android:id="@+id/btnAsistencia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Asistencia"
            android:textSize="18sp"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/azul_oscuro"
            android:drawableStart="@drawable/ic_asistencia"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN HORARIOS -->
        <Button
            android:id="@+id/btnHorarios"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Horarios"
            android:textSize="18sp"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/azul_oscuro"
            android:drawableStart="@drawable/ic_horario"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN NOTIFICACIONES -->
        <Button
            android:id="@+id/btnNotificaciones"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Notificaciones"
            android:textSize="18sp"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/azul_oscuro"
            android:drawableStart="@drawable/ic_notificacion"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN REPORTES -->
        <Button
            android:id="@+id/btnReportes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Reportes"
            android:textSize="18sp"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/azul_oscuro"
            android:drawableStart="@drawable/ic_reporte"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN PERFIL -->
        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Perfil"
            android:textSize="18sp"
            android:backgroundTint="@color/blanco"
            android:textColor="@color/azul_oscuro"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN LOGOUT -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Cerrar Sesión"
            android:textSize="18sp"
            android:backgroundTint="@color/rojo"
            android:textColor="@color/blanco"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</ScrollView>



