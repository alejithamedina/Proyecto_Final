<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Ícono del módulo -->
        <ImageView
            android:id="@+id/logoAsignatura"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_asignatura"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <!-- TÍTULO DEL MÓDULO -->
        <TextView
            android:id="@+id/tituloModuloAsignaturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Módulo Asignaturas"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/azul_oscuro"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- BOTÓN AGREGAR -->
        <Button
            android:id="@+id/btnAgregarAsignatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Asignatura"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/azul_oscuro"
            android:textColor="@color/blanco"/>

        <!-- CONTENEDOR PARA LAS ASIGNATURAS -->
        <LinearLayout
            android:id="@+id/contenedorAsignaturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" />

        <!-- BOTÓN DEVOLVER -->
        <ImageButton
            android:id="@+id/btnDevolverAsignaturas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_devolver"
            android:background="@null"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:contentDescription="Volver" />



    </LinearLayout>

</ScrollView>







