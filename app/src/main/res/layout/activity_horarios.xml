<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ³dulo de Horarios"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/azul_oscuro"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/logoEstudiante"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_horario"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAgregarHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Horario"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/azul_oscuro"
            android:textColor="@color/blanco"/>

        <LinearLayout
            android:id="@+id/contenedorHorarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ImageButton
            android:id="@+id/btnDevolverHorarios"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_devolver"
            android:background="@null"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:contentDescription="Volver" />

    </LinearLayout>

</ScrollView>



